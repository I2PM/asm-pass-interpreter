derived isStartSubject(processID, subjectID) = contains(processStartSubjectIDs(processID), subjectID)

rule GenerateUniqueProcessInstanceID = {
    nextPIUsedBy(nextPI) := self // ensure no other agent increments nextPI
    nextPI := nextPI + 1
    result := nextPI
