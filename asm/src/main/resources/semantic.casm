derived searchMacro(name) = return numres in {
    let processID = processIDFor(self),
        subjectID = subjectIDFor(self) in
    let macros    = subjectMacros(processID, subjectID) in {
        choose mID in macros with macroID(processID, mID) = name do {
            numres := mID
        }
        ifnone {
            choose mID in processScopedMacroNumbers(processID) with macroID(processID, mID) = name do {
                numres := mID
            }
            ifnone {
