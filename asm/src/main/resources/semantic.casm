derived isStartAbleProcess(processID) = (|processStartSubjectIDs(processID)| > 0)

// all loaded processes that are start-able
// called from UI
derived startAbleProcesses = filter(pALL, @isStartAbleProcess)


rule AddProcess(processID, processMap) = {
    debuginfo AddProcess self + ": store processMap for '" + processID + "': " + processMap

    add processID to pALL

    processData(processID)               := processMap()("data")
    processSubjects(processID)           := processMap()("subjects")
    processStartSubjectIDs(processID)    := processMap()("startSubjectIDs")
    processMacros(processID)             := processMap()("macros")
    processScopedMacroNumbers(processID) := processMap()("processMacroNumbers")
    processStates(processID)             := processMap()("states")
    processTransitions(processID)        := processMap()("transitions")

    // each subject MIGHT have data with predefined agents, that will automatically be assigned
    let agents = tryGet(processMap()("data"), "agents") in {
        if (agents != undef) then {
            forall sID in keySet(agents) do {
                predefinedAgents(processID, sID) := agents(sID)

                // remember their names for suggestion list in UI
                forall a in agents(sID) do {
                    add a to aALL
                }
            }
        }
    }
}


derived stateFilter_ID(stateNumber, stateID) = (last(stateNumber)("ID") = stateID)
derived stateFromID(processID, stateID) = firstFromSet(filterSet1(mapToPairs(processStates(processID)), @stateFilter_ID, stateID))
derived stateNumberFromID(processID, stateID) = head(stateFromID(processID, stateID))


