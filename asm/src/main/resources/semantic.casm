derived statePriority(processID, stateNumber)                  = (processStates(processID)(stateNumber))("priority")
derived stateOutgoingTransitionNumbers(processID, stateNumber) = (processStates(processID)(stateNumber))("outgoingTransitionNumbers")


derived stateLabel(processID, stateNumber) = return stringres in {
    let ID    = (processStates(processID)(stateNumber))("ID") in
    let label = (processStates(processID)(stateNumber))("label") in {
        if (label != undef and label != "") then {
