derived transitionPriority(processID, transitionNumber) = return numres in {
    let prio = (processTransitions(processID)(transitionNumber))("priority") in {
        if (prio = undef) then numres := 0
        else numres := prio
    }
}

derived transitionHasLabel(processID, transitionNumber, label) = ((processTransitions(processID)(transitionNumber))("label") = label)

derived getTransitionByLabel(processID, stateNumber, label) = return numres in {
    choose transitionNumber in outgoingNormalTransitions(processID, stateNumber) with transitionHasLabel(processID, transitionNumber, label) do {
        numres := transitionNumber
    }
    ifnone {
        numres := undef
    }
}

